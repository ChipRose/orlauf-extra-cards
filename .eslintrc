{
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "es2021": true,
    "browser": true
  },
  "extends": "htmlacademy/vanilla",
  "rules": {
    "semi": ["error", "always"],          
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-unused-vars": ["warn"],
    "eqeqeq": ["error", "always"]
  }
}
